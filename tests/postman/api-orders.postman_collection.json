{
  "info": {
    "name": "API Orders",
    "description": "Collection de requêtes pour tester l'API Orders",
    "_postman_id": "YOUR_POSTMAN_COLLECTION_ID"
  },
  "item": [
    {
      "name": "Récupérer toutes les commandes",
      "request": {
        "method": "GET",
        "url": "http://localhost:18301/api/orders"
      }
    },
    {
      "name": "Récupérer une commande",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:18301/api/orders/{{orderId}}",
          "host": [
            "http://localhost:18301"
          ],
          "path": [
            "api",
            "orders",
            "{{orderId}}"
          ]
        }
      }
    },
    {
      "name": "Créer une commande",
      "request": {
        "method": "POST",
        "url": "http://localhost:18301/api/orders",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"customerId\": \"{{customerId}}\",\n    \"products\": [\n        {\n            \"productId\": \"{{productId}}\",\n            \"quantity\": 2\n        }\n    ],\n    \"status\": \"pending\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"orderId\", jsonData._id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Mettre à jour une commande",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "http://localhost:18301/api/orders/{{orderId}}",
          "host": [
            "http://localhost:18301"
          ],
          "path": [
            "api",
            "orders",
            "{{orderId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"shipped\",\n    \"products\": [\n        {\n            \"productId\": \"{{productId}}\",\n            \"quantity\": 3\n        }\n    ]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      }
    },
    {
      "name": "Supprimer une commande",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:18301/api/orders/{{orderId}}",
          "host": [
            "http://localhost:18301"
          ],
          "path": [
            "api",
            "orders",
            "{{orderId}}"
          ]
        }
      }
    },
    {
      "name": "Récupérer les produits d'une commande",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:18301/api/orders/{{orderId}}/products",
          "host": [
            "http://localhost:18301"
          ],
          "path": [
            "api",
            "orders",
            "{{orderId}}",
            "products"
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "customerId",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    }
  ]
}
